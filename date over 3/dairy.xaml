<UserControl x:Class="date_over_3.dairy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:date_over_3"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">
    <Grid>

        <StackPanel>
            <DatePicker Height="40" Foreground="DarkOrange" x:Name="day"></DatePicker>
            <TextBox BorderBrush="Orange" BorderThickness="1" FontSize="15" Height="210" AcceptsReturn="True" TextWrapping="Wrap" Padding="5" x:Name="notebook"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
