<UserControl x:Class="date_over_3.costbook"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:date_over_3"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <DatePicker Grid.Column="0" Foreground="DodgerBlue" BorderThickness="1" BorderBrush="DodgerBlue" x:Name="date"></DatePicker>
        <TextBox Grid.Column="1" x:Name="thing" Foreground="DodgerBlue" BorderThickness="1" BorderBrush="DodgerBlue" FontSize="20"></TextBox>
        <TextBox Grid.Column="2" x:Name="number" Foreground="DodgerBlue" BorderThickness="1" BorderBrush="DodgerBlue" FontSize="20"></TextBox>
    </Grid>
</UserControl>
